<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GranjaSystemProject.Views.Lots.Race.ViewRace"
             Title="ViewRace">
    <VerticalStackLayout>
        <RefreshView x:Name="RefreshList" Refreshing="OnRefreshing">
            <CollectionView x:Name="RacesCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5" Padding="15">
                            <Label Text="{Binding Name}" 
                               FontSize="18" 
                               FontAttributes="Bold" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <Label Text="Nenhuma raÃ§a cadastrada." 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </VerticalStackLayout>
</ContentPage>