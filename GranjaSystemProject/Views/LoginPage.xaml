<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GranjaSystemProject.Views.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Email:" />
        <Entry x:Name="EmailEntry" Placeholder="Digite seu email" />

        <Label Text="Senha:" />
        <Entry x:Name="PasswordEntry" Placeholder="Digite sua senha" IsPassword="True" />

        <Button Text="Entrar" Clicked="OnLoginClicked" />
        <Button Text="Cadastrar" Clicked="OnRegisteClicked" />
    </VerticalStackLayout>
 
</ContentPage>
